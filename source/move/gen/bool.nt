import {
  core.bool.show,
  core.random {random-int32},
  this.rule.gen {Gen, gen},
}

inline bool-gen: gen(bool) {
  Gen of {
    generate = {
      function (_) {
        let i = random-int32(2) in
        if eq-int32(i, 0) {
          False
        } else {
          True
        }
      }
    },
    shrink = {
      function (x) {
        if x {
          [False]
        } else {
          []
        }
      }
    },
    viewer = core.bool.show.as-show,
  }
}
